


<div class='row offset-3'>

    <div class='col-4'>

        <h6>Burgers to eat:</h6>
<ol>
    {{#each burgers}}

    {{#unless devoured}}

    <li>

        {{burger_name}}
        
    	<button class="devour-burger btn btn-warning" data-id="{{id}}">Devour!</button>

    </li>

    {{/unless}}
    {{/each}}

</ol>

</div>

<div class='col-4'>

<h6>Burgers devoured:</h6>
<ol>
    {{#each burgers}}

    {{#if devoured}}

    <li>

        {{burger_name}}
        
    </li>
    
    {{/if}}
    {{/each}}

</ol>

</div>

</div>

<div class="row offset-4">

<form class="create-form">

  <div class="form-group">

    <textarea id='burger' rows="4" cols="45"></textarea>

  </div>

  <button class='btn btn-info' type="submit">Add a Burger</button>
</form>

</div>